{
  "name": "lambda-auto-deploy",
  "version": "1.0.0",
  "description": "Example of automatic lambda deployment",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "node ./scripts/build.js",
    "postbuild": "cd dist && zip -r index.zip bundle.js*",
    "deploy:production": "aws lambda create-function --function-name auto-deployed --runtime \"nodejs21.x\" --role arn:aws:iam::123456789012:role/lambda-ex --zip-file \"fileb://dist/index.zip\" --handler index.handler"
  },
  "author": "Karen Sayadyan",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/aws-sdk": "^0.0.42",
    "esbuild": "^0.24.0",
    "esbuild-plugin-tsc": "^0.4.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1691.0"
  }
}
